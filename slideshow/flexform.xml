<T3DataStructure>
	<ROOT>
		<type>array</type>
		<el>
			<displayTime>
				<TCEforms>
					<label>Display Time (in milliseconds. 0 = no auto playback.)</label>
					<config>
						<type>input</type>
						<size>6</size>
						<default>3000</default>
					</config>
				</TCEforms>
			</displayTime>
			<transition>
				<TCEforms>
					<label>Transition</label>
					<config>
						<type>select</type>
						<items type="array">
							<numIndex index="0" type="array">
								<numIndex index="0">Fade</numIndex>
								<numIndex index="1">fade</numIndex>
							</numIndex>
							<numIndex index="1" type="array">
								<numIndex index="0">Scroll Up</numIndex>
								<numIndex index="1">scrollUp</numIndex>
							</numIndex>
							<numIndex index="2" type="array">
								<numIndex index="0">Scroll Down</numIndex>
								<numIndex index="1">scrollDown</numIndex>
							</numIndex>
							<numIndex index="3" type="array">
								<numIndex index="0">Scroll Left</numIndex>
								<numIndex index="1">scrollLeft</numIndex>
							</numIndex>
							<numIndex index="4" type="array">
								<numIndex index="0">Scroll Right</numIndex>
								<numIndex index="1">scrollRight</numIndex>
							</numIndex>
							<numIndex index="5" type="array">
								<numIndex index="0">Shuffle</numIndex>
								<numIndex index="1">shuffle</numIndex>
							</numIndex>
						</items>
					</config>
				</TCEforms>
			</transition>
			<resolution>
				<TCEforms>
					<label>Resolution</label>
					<config>
						<type>select</type>
						<items type="array">
							<numIndex index="0" type="array">
								<numIndex index="0">Standard (4x3)</numIndex>
								<numIndex index="1">standard</numIndex>
							</numIndex>
							<numIndex index="1" type="array">
								<numIndex index="0">Widescreen (16x9)</numIndex>
								<numIndex index="1">widescreen</numIndex>
							</numIndex>
							<numIndex index="2" type="array">
								<numIndex index="0">Custom</numIndex>
								<numIndex index="1">custom</numIndex>
							</numIndex>
						</items>
					</config>
					<onChange>reload</onChange>
				</TCEforms>
			</resolution>
			<height>
				<TCEforms>
					<label>Height</label>
					<config type="array">
						<type>input</type>
						<default>300</default>
					</config>
					<displayCond>FIELD:resolution:=:custom</displayCond>
				</TCEforms>
			</height>
			<width>
				<TCEforms>
					<label>Width (Leave blank for full width)</label>
					<config type="array">
						<type>input</type>
						<default>400</default>
					</config>
					<displayCond>FIELD:resolution:=:custom</displayCond>
				</TCEforms>
			</width>
			<thumbnails>
				<TCEforms>
					<label>Thumbnails</label>
					<config type="array">
						<type>select</type>
						<items type="array">
							<numIndex index="0" type="array">
								<numIndex index="0">None</numIndex>
								<numIndex index="1">none</numIndex>
							</numIndex>
							<numIndex index="1" type="array">
								<numIndex index="0">Small</numIndex>
								<numIndex index="1">small</numIndex>
							</numIndex>
							<numIndex index="2" type="array">
								<numIndex index="0">Medium</numIndex>
								<numIndex index="1">medium</numIndex>
							</numIndex>
							<numIndex index="3" type="array">
								<numIndex index="0">Large</numIndex>
								<numIndex index="1">large</numIndex>
							</numIndex>
						</items>
					</config>
				</TCEforms>
			</thumbnails>
			<images>
				<section>1</section>
				<type>array</type>
				<el>
					<image>
						<type>array</type>
						<tx_templavoila>
							<title>LLL:EXT:wec_contentelements/slideshow/locallang.xml:flexform.slideshow.image</title>
						</tx_templavoila>
						<el>
							<title>
								<TCEforms>
									<label>LLL:EXT:wec_contentelements/slideshow/locallang.xml:flexform.slideshow.imageTitle</label>
									<config type="array">
										<type>input</type>
									</config>
								</TCEforms>
							</title>
							<path>
								<TCEforms>
									<label>LLL:EXT:wec_contentelements/slideshow/locallang.xml:flexform.slideshow.imagePath</label>
									<config>
										<type>input</type>
										<wizards type="array">
											<_PADDING type="integer">2</_PADDING>
											<link type="array">
												<type>popup</type>
												<title>Link</title>
												<icon>link_popup.gif</icon>
												<script>browse_links.php?mode=wizard</script>
												<JSopenParams>height=300,width=500,status=0,menubar=0,scrollbars=1</JSopenParams>
												<params>
													<allowedExtension>gif,jpg,jpeg,tif,bmp,pcx,tga,png,pdf,ai</allowedExtension>
													<blindLinkOptions>mail,page,spec,url,folder</blindLinkOptions>
												</params>
											</link>
										</wizards>
									</config>
								</TCEforms>
							</path>
							<link>
								<TCEforms>
									<label>Link</label>
									<config>
										<type>input</type>
										<wizards type="array">
											<_PADDING type="integer">2</_PADDING>
											<link type="array">
												<type>popup</type>
												<title>Link</title>
												<icon>link_popup.gif</icon>
												<script>browse_links.php?mode=wizard</script>
												<JSopenParams>height=300,width=500,status=0,menubar=0,scrollbars=1</JSopenParams>
											</link>
										</wizards>
									</config>
								</TCEforms>
							</link>
						</el>
					</image>
				</el>
			</images>
		</el>
	</ROOT>
</T3DataStructure>